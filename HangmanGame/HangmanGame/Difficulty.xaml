<Page x:Class="HangmanGame.Difficulty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectDifficulty" Height="450" Width="800" Background="DarkGray">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="126" Margin="0,27,0,0" Text="Select Difficulty" TextWrapping="Wrap" VerticalAlignment="Top" Width="618" TextAlignment="Center" FontSize="70"/>
        <RadioButton x:Name="Easy" Content="Easy" HorizontalAlignment="Left"  Margin="69,155,0,0" VerticalAlignment="Top" Width="200" Height="40" FontSize="32" IsChecked="True"/>
        <RadioButton x:Name="Medium" Content="Medium" HorizontalAlignment="Left"  Margin="69,225,0,0" VerticalAlignment="Top" Width="200" Height="40" FontSize="32"/>
        <RadioButton x:Name="Hard" Content="Hard" HorizontalAlignment="Left"  Margin="69,295,0,0" VerticalAlignment="Top" Width="200" Height="40" FontSize="32"/>
        <Button x:Name="BeginButton" Content="Begin" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="50" Width="110" FontSize="30" Click="BeginButton_Click"/>

    </Grid>
</Page>
